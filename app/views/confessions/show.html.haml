.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      .post-preview
        = link_to confession_path(confession) do
          %h2.post-title
            = confession.id
            = confession.title
          %h3.post-subtitle
            = confession.body
      %hr/
      %ul.pager
        %li.previous
          = link_to confession_path(confession.id - 1 ) do
            Previous Confession
        %li
          = link_to root_path do
            Home
        %li.next
          = link_to confession_path(confession.id + 1 ) do
            Next Confession


